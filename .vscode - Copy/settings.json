        "default": true,
        // ===== GitHub Flavored Markdown (GFM) Settings =====

        // MD013: Line length - disabled (GitHub has no hard limit)
        "MD013": false,

        // MD033: Allow inline HTML (GitHub supports full HTML)
        "MD033": false,

        // MD041: First line doesn't need to be H1 (GitHub README flexibility)
        "MD041": false,

        // MD024: Allow duplicate headings in different sections
        "MD024": {
            "siblings_only": true
        },

        // MD003: ATX-style headings (# style) - GitHub standard
        "MD003": {
            "style": "atx"
        },

        // MD004: Unordered list style - use dashes (GitHub convention)
        "MD004": {
            "style": "dash"
        },

        // MD007: List indentation - 2 spaces (GitHub default)
        "MD007": {
            "indent": 2,
            "start_indented": false
        },

        // MD009: No trailing spaces (except for line breaks)
        "MD009": {
            "br_spaces": 2,
            "list_item_empty_lines": false,
            "strict": false
        },

        // MD010: No hard tabs (use spaces)
        "MD010": {
            "code_blocks": false
        },

        // MD012: Multiple consecutive blank lines
        "MD012": {
            "maximum": 2
        },

        // MD022: Headings should be surrounded by blank lines
        "MD022": {
            "lines_above": 1,
            "lines_below": 1
        },

        // MD025: Multiple top-level headings allowed (for long docs)
        "MD025": false,

        // MD026: No trailing punctuation in headings (except ? for questions)
        "MD026": {
            "punctuation": ".,;:!"
        },

        // MD030: Spaces after list markers
        "MD030": {
            "ul_single": 1,
            "ol_single": 1,
            "ul_multi": 1,
            "ol_multi": 1
        },

        // MD031: Fenced code blocks surrounded by blank lines
        "MD031": {
            "list_items": true
        },

        // MD032: Lists surrounded by blank lines
        "MD032": true,

        // MD034: Allow bare URLs (GitHub auto-links them)
        "MD034": false,

        // MD040: Fenced code blocks should have language specified
        "MD040": true,

        // MD046: Code block style - fenced (```) for GitHub
        "MD046": {
            "style": "fenced"
        },

        // MD047: Files should end with newline (GitHub standard)
        "MD047": true,

        // MD049: Emphasis style - underscore or asterisk (GitHub supports both)
        "MD049": {
            "style": "asterisk"
